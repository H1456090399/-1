.swiper-tab{
  width: 100%; 
  text-align: center; 
  line-height: 80rpx;
}
.swiper-tab-list{
  font-size: 30rpx; 
  display: inline-block; 
  width: 25%; 
  color:black; 
}
.on{
  color: #da7c0c; 
  border-bottom: 5rpx solid #da7c0c;
}
.swiper-box{ 
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
 }

.description {
  padding: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  line-height: 25px;
  height: 100%;
  font-size: 30rpx;
}

.descript {
  background: #f8f8f8;
  width: 100%;
  height: 100%;
}

.descript rich-text {
  font-size: 30rpx;
  color: #000;
}